{
    "name": "Summarly",
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "Click to summarize"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "manifest_version": 2,
    "description": "Summarly",
    "permissions": [
        "activeTab",
        "tabs",
        "http://summarly-api.herokuapp.com/"
    ],
    "version": "0.0.1"
}